<body>
    <div class="container">
        <h2 class="form-title">로그인</h2>
        <input type="text" id="username" class="input-field" placeholder="아이디" required>
        
        <!-- 비밀번호 입력 필드와 비밀번호 보이기/숨기기 버튼 -->
        <div class="password-container">
            <input type="password" id="password" class="input-field" placeholder="비밀번호" required>
            <button class="toggle-password-btn" onclick="togglePasswordVisibility()">보이기</button>
        </div>
        
        <div id="register-fields" class="register-field">
            <input type="email" id="email" class="input-field" placeholder="이메일" required>
            <input type="password" id="confirm-password" class="input-field" placeholder="비밀번호 확인" required>
        </div>

        <button class="action-btn" id="action-btn">로그인</button>

        <div class="toggle-container">
            <button class="toggle-btn" onclick="toggleForm()">회원가입으로 전환</button>
        </div>
    </div>

    <script>
        let isLogin = true;
        let passwordVisible = false;

        function toggleForm() {
            const formTitle = document.querySelector('.form-title');
            const registerFields = document.getElementById('register-fields');
            const actionBtn = document.getElementById('action-btn');
            const toggleBtn = document.querySelector('.toggle-btn');

            if (isLogin) {
                formTitle.innerText = '회원가입';
                registerFields.style.display = 'block';
                actionBtn.innerText = '회원가입';
                toggleBtn.innerText = '로그인으로 전환';
            } else {
                formTitle.innerText = '로그인';
                registerFields.style.display = 'none';
                actionBtn.innerText = '로그인';
                toggleBtn.innerText = '회원가입으로 전환';
            }

            isLogin = !isLogin;
        }

        function togglePasswordVisibility() {
            const passwordField = document.getElementById('password');
            const toggleBtn = document.querySelector('.toggle-password-btn');

            if (passwordVisible) {
                passwordField.type = 'password';
                toggleBtn.innerText = '보이기';
            } else {
                passwordField.type = 'text';
                toggleBtn.innerText = '숨기기';
            }

            passwordVisible = !passwordVisible;
        }
    </script>
</body>
