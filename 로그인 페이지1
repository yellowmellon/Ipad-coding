    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #e0e0e0;
            margin: 0;
        }

        .container {
            background-color: #e0e0e0;
            border-radius: 20px;
            box-shadow: 10px 10px 30px #bebebe, -10px -10px 30px #ffffff;
            width: 350px;
            text-align: center;
            padding: 40px 30px;
        }

        .input-field {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            border: none;
            border-radius: 20px;
            background-color: #e0e0e0;
            box-shadow: inset 5px 5px 15px #bebebe, inset -5px -5px 15px #ffffff;
            font-size: 16px;
            color: #333;
            box-sizing: border-box;
        }

        .password-container {
            position: relative;
            width: 100%;
        }

        .toggle-password-btn {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            background-color: transparent;
            border: none;
            font-size: 12px;
            cursor: pointer;
            color: #666;
        }

        .action-btn, .toggle-btn {
            background-color: #e0e0e0;
            color: #333;
            padding: 15px;
            border: none;
            border-radius: 20px;
            width: 100%;
            margin: 20px 0;
            cursor: pointer;
            box-shadow: 5px 5px 15px #bebebe, -5px -5px 15px #ffffff;
            font-size: 18px;
            font-weight: bold;
            box-sizing: border-box;
        }

        .action-btn:hover, .toggle-btn:hover {
            background-color: #dcdcdc;
        }

        .form-title {
            margin-bottom: 20px;
            font-size: 28px;
            color: #333;
        }

        .toggle-container {
            margin-top: 10px;
        }

        .toggle-btn {
            font-size: 14px;
            background-color: transparent;
            color: #666;
            padding: 5px;
            margin-top: 10px;
            width: auto;
            box-shadow: none;
